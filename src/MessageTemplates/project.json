{
  "version": "1.0.0-beta-*",
  "description": "Message templates - the ability to format named string values, and capture the properties",
  "authors": [ "Serilog Contributors", "Adam Chester" ],
  "packOptions": {
    "tags": [ "message", "template", "serilog", "logging", "semantic", "structured" ],
    "projectUrl": "https://github.com/messagetemplates/MessageTemplates",
    "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0",
    "iconUrl": "http://messagetemplates.org/images/messagetemplates-nuget.png"
  },
  "buildOptions": {
    "xmlDoc": true
  },
    "frameworks": {
        "net4.5": {
            "buildOptions": {
                "define": [ "REMOTING" ]
            }
        },
        "net40": {
            "buildOptions": {
                "define": [ "RESHAPED_REFLECTION" ]
            },
            "assemblies": {
                "System.Data": "",
                "System.Numerics": "",
                "System.Runtime.Serialization": "",
                "System.Xml": "",
                "System.Xml.Linq": ""
            }
        },
        "netstandard1.0": {
            "dependencies": {
                "Microsoft.CSharp": "4.0.1-rc2-24027",
                "System.Collections": "4.0.11-rc2-24027",
                "System.Dynamic.Runtime": "4.0.11-rc2-24027",
                "System.Globalization": "4.0.11-rc2-24027",
                "System.Linq": "4.1.0-rc2-24027",
                "System.Reflection": "4.1.0-rc2-24027",
                "System.Reflection.Extensions": "4.0.1-rc2-24027",
                "System.Runtime": "4.1.0-rc2-24027",
                "System.Runtime.Extensions": "4.1.0-rc2-24027",
                "System.Text.RegularExpressions": "4.0.12-rc2-24027",
                "System.Threading": "4.0.11-rc2-24027"
            }
        },
        "netstandard1.3": {
            "buildOptions": {
                "define": [ "ASYNCLOCAL" ]
            },
            "dependencies": {
                "Microsoft.CSharp": "4.0.1-rc2-24027",
                "System.Collections": "4.0.11-rc2-24027",
                "System.Dynamic.Runtime": "4.0.11-rc2-24027",
                "System.Globalization": "4.0.11-rc2-24027",
                "System.Linq": "4.1.0-rc2-24027",
                "System.Reflection": "4.1.0-rc2-24027",
                "System.Reflection.Extensions": "4.0.1-rc2-24027",
                "System.Runtime": "4.1.0-rc2-24027",
                "System.Runtime.Extensions": "4.1.0-rc2-24027",
                "System.Text.RegularExpressions": "4.0.12-rc2-24027",
                "System.Threading": "4.0.11-rc2-24027"
            }
        }
    }
}
